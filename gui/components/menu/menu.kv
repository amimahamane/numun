<Menu>
    padding: dp(70), dp(0)
    spacing: dp(75)

    md_bg_color: 0,0,0,.5
    size_hint: None, None
    size: self.minimum_size

    pos_hint: {"center_x": .5}

    Action:
        id: history
        icon: "view-list-outline"
        function: partial(root.switch, self)

    Action:
        id: creation
        icon: "plus-circle-outline"
        function: partial(root.switch, self)

    Action:
        id: message
        icon: "bell-circle-outline"
        function: partial(root.switch, self)
