<Chart>
    padding: dp(25), dp(0)

    size_hint_y: None
    height: root.height

    MDBoxLayout:
        id: reference
        orientation: "vertical"
        pos_hint: {"center_y": .5}

        MDBoxLayout:
            size_hint_y: 10/11

            MDBoxLayout:
                size_hint_x: 9/10

            MDFloatLayout:
                id: y_axis
                orientation: "vertical"
                size_hint_x: 1/10

        MDBoxLayout:
            id: x_axis
            size_hint_y: 1/11

    MDFloatLayout:
        id: content
        pos_hint: {"center_x" : .5, "center_y" :.5}

    MDFloatLayout:
        pos_hint: {"center_x" : .5, "center_y" :.5}

        MDBoxLayout:
            md_bg_color: 1,1,1,.1
            pos_hint: {"center_x" : .5, "center_y" :.85}

            size_hint: .4, .2

            MDLabel:
                id: name
                text: ""
                halign: "center"
                pos_hint: {"center_x" : .5, "center_y" :.55}
                opacity: .3

