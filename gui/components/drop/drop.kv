<Drop>
    items: []

    MDBoxLayout:
        id: content
        size_hint_y: None
        height: self.children[0].children[0].children[0].size[1]
        pos_hint: {"center_x": .5, "center_y": .5}

        MDBoxLayout:
            MDFloatLayout:
                size_hint_y: None
                height: self.children[0].size[1]

                Input:
                    id: field
                    disabled: True
                    pos_hint: {"center_x": .5, "center_y": .3}

                Action:
                    id: caller
                    icon: "arrow-down-drop-circle-outline"
                    function: root.open
                    pos_hint: {"center_x": .87, "center_y": .6}
