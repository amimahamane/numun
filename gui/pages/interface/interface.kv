<Interface>
    id: interface
    orientation: "vertical"

    md_bg_color: 1, 1, 1, 1

    MDFloatLayout:
        id: ground

        MDBoxLayout:
            id: whole
            orientation: "vertical"

            MDFloatLayout:
                id: top_half
                orientation: "vertical"
                md_bg_color: 0, 0, 0, .2

                Grid:
                    pos_hint: {"center_x": .5, "center_y": .5}

            MDBoxLayout:
                id: bottom_half
                orientation: "horizontal"

                MDBoxLayout:
                    id: left_quater
                    orientation: "horizontal"
                    md_bg_color: 0, 0, 0, .4

                MDBoxLayout:
                    id: right_quater
                    orientation: "horizontal"
                    md_bg_color: 0, 0, 0, .6